<div class="text-center">
 <img src="assets/img/burger.gif" alt="burger" class="image mt-3">
<h1 class="text-center">Eat-Da-Burger!</h1>
</div>

<div class="row text-center">
 <div class="col-md-6">
   <h2>Burgers ready to be devoured!</h2>

 <ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.burger_name}}

        <button class="devour" data-id="{{this.id}}">Devour!</button>
    </li>

    {{/unless}}
    {{/each}}
</ul>
</div>
<div class="col-md-6">
<h2>Burgers devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>
</div>
</div>
<div class="text-center">
<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger">
    </div>

    <button type="submit">Add Burger</button>
</form>
</div>