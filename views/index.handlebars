<h1>Burger!</h1>

<h2>Burgers to devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{this.burger_name}}

        <button class="devour" data-id="{{this.id}}">Devour!</button>
    </li>

    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{this.burger_name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger">
    </div>

    <button type="submit">Add Burger</button>
</form>